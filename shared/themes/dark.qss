/* DARK THEME - Simple Dark UI */
/* Open-source ready - no Afrikaans comments */

* {
    font-family: "Segoe UI", "Roboto", sans-serif;
    font-weight: 400;
    color: #ffffff;
    font-size: 10pt;
}

/* Main Window */
QMainWindow {
    background: #1e1e1e;
    color: #ffffff;
}

/* Glass Cards */
QFrame.glass-card, QGroupBox, QWidget#CentralWidget {
    background: #2d2d2d;
    border: 1px solid #404040;
    border-radius: 8px;
    padding: 16px;
    margin: 8px;
}

/* Consistent card spacing */
QFrame[class="glass-card"] {
    padding: 16px;
    margin: 8px;
}

/* Primary Buttons */
QPushButton[class="primary"] {
    background: #007acc;
    border: none;
    border-radius: 6px;
    color: white;
    font-weight: bold;
    padding: 10px;
    min-width: 100px;
}

QPushButton[class="primary"]:hover {
    background: #005999;
}

/* Success Buttons */
QPushButton[class="success"] {
    background: #28a745;
    border: none;
    border-radius: 6px;
    color: white;
    font-weight: bold;
    padding: 10px;
    min-width: 100px;
}

QPushButton[class="success"]:hover {
    background: #218838;
}

/* Danger Buttons */
QPushButton[class="danger"] {
    background: #dc3545;
    border: none;
    border-radius: 6px;
    color: white;
    font-weight: bold;
    padding: 10px;
    min-width: 100px;
}

QPushButton[class="danger"]:hover {
    background: #c82333;
}

/* Hero Title */
QLabel.hero-title {
    color: #007acc;
    font-size: 20pt;
    font-weight: bold;
    qproperty-alignment: AlignCenter;
    padding: 10px;
}

/* Status Labels */
QLabel.status-connected {
    color: #28a745;
    font-weight: bold;
}

QLabel.status-disconnected {
    color: #dc3545;
    font-weight: bold;
}

/* Tables */
QTableWidget {
    background: #2d2d2d;
    color: #ffffff;
    gridline-color: #404040;
    border: 1px solid #404040;
    border-radius: 6px;
}

QHeaderView::section {
    background: #1e1e1e;
    color: #007acc;
    padding: 6px;
    border: none;
    font-weight: bold;
    border-bottom: 1px solid #007acc;
}

/* Combo Boxes */
QComboBox {
    background: #3c3c3c;
    border: 1px solid #555555;
    border-radius: 4px;
    padding: 6px;
    color: white;
    min-height: 20px;
}

QComboBox::drop-down {
    border: none;
}

QComboBox QAbstractItemView {
    background: #2d2d2d;
    border: 1px solid #555555;
    color: white;
    selection-background-color: #007acc;
}

/* Text Edits */
QTextEdit, QLineEdit {
    background: #3c3c3c;
    border: 1px solid #555555;
    border-radius: 4px;
    color: #ffffff;
    padding: 6px;
}

QTextEdit:focus, QLineEdit:focus {
    border: 1px solid #007acc;
}

/* Scrollbars */
QScrollBar:vertical {
    background: #2d2d2d;
    width: 14px;
    border-radius: 7px;
    margin: 2px;
}

QScrollBar::handle:vertical {
    background: #555555;
    border-radius: 7px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: #666666;
}

/* Progress Bars */
QProgressBar {
    background: #3c3c3c;
    border: 1px solid #555555;
    border-radius: 4px;
    text-align: center;
    color: #ffffff;
}

QProgressBar::chunk {
    background: #007acc;
    border-radius: 2px;
}

/* Checkboxes */
QCheckBox {
    spacing: 8px;
    color: #ffffff;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 2px solid #555555;
    border-radius: 3px;
    background: #3c3c3c;
}

QCheckBox::indicator:checked {
    background: #007acc;
    border: 2px solid #007acc;
}

/* Radio Buttons */
QRadioButton {
    spacing: 8px;
    color: #ffffff;
}

QRadioButton::indicator {
    width: 14px;
    height: 14px;
    border: 2px solid #555555;
    border-radius: 7px;
    background: #3c3c3c;
}

QRadioButton::indicator:checked {
    background: #007acc;
    border: 2px solid #007acc;
}

/* Tabs */
QTabWidget::pane {
    border: 1px solid #555555;
    border-radius: 4px;
    background: #2d2d2d;
}

QTabBar::tab {
    background: #1e1e1e;
    border: 1px solid #404040;
    border-radius: 4px 4px 0 0;
    padding: 8px 16px;
    margin-right: 2px;
    color: #ffffff;
}

QTabBar::tab:selected {
    background: #007acc;
    color: white;
}

/* List Widgets */
QListWidget {
    background: #2d2d2d;
    border: 1px solid #404040;
    border-radius: 4px;
    color: #ffffff;
}

QListWidget::item {
    padding: 6px;
    border-bottom: 1px solid #404040;
}

QListWidget::item:selected {
    background: #007acc;
    color: white;
}